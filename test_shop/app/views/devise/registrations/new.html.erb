<% provide(:title, 'Sign up') %>
<%=render 'application/navigation' %>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="thumbnail col-md-4 col-md-offset-4" style="height: 100%">
    <div class="col-md-10 col-md-offset-1">
      <h2><%= t('.sign_up') %></h2>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control", required:"true" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control", required:"true" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", required:"true" %>
        </div>

        <div class="actions">
          <%= f.submit t('.sign_up'), class:"btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
  </div>
</div>

<%= render 'footer' %>
